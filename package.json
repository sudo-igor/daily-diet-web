{
  "name": "daily-diet-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "jest --config=jest.config.cjs",
    "test:jest": "jest --config=jest.config.cjs --no-watchman",
    "test:unit": "jest --config=jest.config.cjs --watchAll=false --no-watchman",
    "test:all": "cypress run --spec \"cypress/e2e/01-flow.cy.js,cypress/e2e/02-auth.cy.js,cypress/e2e/03-meals.cy.js\"",
    "report:clean": "rimraf cypress/reports cypress/screenshots cypress/videos reports coverage",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome-*.json > cypress/reports/mochawesome.json",
    "report:generate": "marge cypress/reports/mochawesome.json -o cypress/reports/html",
    "test:with-report": "yarn report:clean && yarn test && yarn report:merge && yarn report:generate",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run-improved": "cypress run --spec \"cypress/e2e/improved-tests.cy.js,cypress/e2e/meals-tests.cy.js\"",
    "cy:flow-tests": "cypress run --spec 'cypress/e2e/app-flow-tests.cy.js'",
    "jest:report": "rimraf reports coverage && jest --config=jest.config.cjs --watchAll=false --no-watchman",
    "jest:report:open": "node -e \"const { platform } = require('os'); const { exec } = require('child_process'); const open = platform() === 'win32' ? 'start' : 'open'; exec(open + ' reports/jest-stare/index.html'); exec(open + ' reports/jest-html/test-report.html'); exec(open + ' coverage/lcov-report/index.html');\""
  },
  "dependencies": {
    "axios": "^1.6.7",
    "date-fns": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-router-dom": "^6.22.1",
    "recharts": "^2.15.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "10.4.17",
    "cypress": "^14.3.3",
    "esbuild": "^0.21.5",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "jest-stare": "^2.5.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "postcss": "8.4.35",
    "rimraf": "^5.0.5",
    "tailwindcss": "3.4.1",
    "ts-jest": "^29.3.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  }
}
